<div class="posts">
    {{#each posts}}
    <div class="card">
        <div class="card-header">
            <h2>
                {{title}}
            </h2>
        </div>
        <div class="card-body">
            {{body}}
        </div>
        <div class="author">
            Posted by {{User.username}} on {{format_date createdAt}}
        </div>
    </div>
    {{/each}}
</div>